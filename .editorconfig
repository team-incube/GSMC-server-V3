root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.kt]
ktlint_standard_blank-line-between-when-conditions = enabled
ktlint_standard_when-entry-bracing = enabled

[*.{json,xml,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false